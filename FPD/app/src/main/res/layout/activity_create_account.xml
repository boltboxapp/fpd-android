<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="qiwei.fpd.create_account">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name: "
        android:id="@+id/textView_c_username"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password:"
        android:id="@+id/textView_c_password"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/editText_c_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zip Code:"
        android:id="@+id/textView_c_zip"
        android:layout_marginBottom="80dp"
        android:layout_above="@+id/button_create_my_acc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_c_username"
        android:layout_alignTop="@+id/textView_c_username"
        android:layout_toRightOf="@+id/textView_c_username"
        android:layout_toEndOf="@+id/textView_c_username" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_c_password"
        android:layout_alignTop="@+id/textView_c_password"
        android:layout_alignLeft="@+id/editText_c_username"
        android:layout_alignStart="@+id/editText_c_username" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_c_zip"
        android:layout_alignTop="@+id/textView_c_zip"
        android:layout_alignLeft="@+id/editText_c_password"
        android:layout_alignStart="@+id/editText_c_password" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create my account !"
        android:id="@+id/button_create_my_acc"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
