<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="qiwei.fpd.user">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Homepage"
        android:id="@+id/textView_homepage"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET UP A DELIVERY"
        android:id="@+id/button_setup"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT EXISTING DELIVERY"
        android:id="@+id/button_editDelivery"
        android:layout_below="@+id/button_setup"
        android:layout_alignLeft="@+id/button_setup"
        android:layout_alignStart="@+id/button_setup"
        android:layout_marginTop="41dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER PROFILE"
        android:id="@+id/button_profile"
        android:layout_below="@+id/button_editDelivery"
        android:layout_alignLeft="@+id/button_editDelivery"
        android:layout_alignStart="@+id/button_editDelivery"
        android:layout_marginTop="41dp" />
</RelativeLayout>
